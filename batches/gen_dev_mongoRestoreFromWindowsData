#!/bin/sh

echo "Mettre les donn√©es JSON dans /data/mongo/gen_prod/windowsData/gen_dev (cette derniere sous directory est le nom de la base)"

# We stop the application
docker-compose -p batches stop

# We start and restore Mongo
docker-compose -p batches  up -d gen_dev_mongo

docker run -e FILE="/tmp/initialData" --rm --name mongoReload -it --network batches_gen_dev_network -v /data/mongo/gen_dev/windowsData:/tmp mongo:3.2.6 bash -c 'mongorestore /tmp -h "gen_dev_mongo:27017" --drop'

# We restart the application
docker-compose -p batches up -d

# We list the docker-compose processes
docker-compose -p batches ps

